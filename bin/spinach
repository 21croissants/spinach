#!/usr/bin/env ruby

begin
  require 'spinach'
rescue LoadError
  require_relative '../lib/spinach'
end

if ARGV.any?
  ARGV.each do |file|
    Spinach::Runner.new(
      Spinach::Parser.new(file).parse
    ).run
  end
else
  Dir.glob('features/**/*.feature').each do |file|
    Spinach::Runner.new(
      Spinach::Parser.new(file).parse
    ).run
  end
end

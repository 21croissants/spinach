#!/usr/bin/env ruby

begin
  require 'spinach'
rescue LoadError
  require_relative '../lib/spinach'
  Dir.glob(
    File.expand_path File.join(Spinach.config[:step_definitions_path], '**', '*.rb')
  ).each do |file|
    require file
  end
end

ARGV.each do |file|
  Spinach::Runner.new(
    Spinach::Parser.new(file).parse
  ).run
end
